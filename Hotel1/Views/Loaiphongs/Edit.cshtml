@model Hotel1.Models.Loaiphong

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa loại phòng</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Malp" />
            <div class="form-group">
                <label asp-for="Malp" class="control-label"></label>
                <input asp-for="Malp" class="form-control" disabled/>
                <span asp-validation-for="Malp" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <label asp-for="Soluongtoida" class="control-label"></label>
                <input asp-for="Soluongtoida" class="form-control" />
                <span asp-validation-for="Soluongtoida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gialoaiphong" class="control-label"></label>
                <input asp-for="Gialoaiphong" class="form-control" value="@Math.Floor(Model.Gialoaiphong)" />
                <span asp-validation-for="Gialoaiphong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>