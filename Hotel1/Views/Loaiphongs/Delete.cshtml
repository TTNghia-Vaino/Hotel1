@model Hotel1.Models.Loaiphong

@{
    ViewData["Title"] = "Delete";
}


<h3>Bạn có chắc muốn xóa loại phòng này</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Loại phòng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Malp)
        </dd>
        <dt class="col-sm-2">
            Số lượng 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Soluongtoida)
        </dd>
        <dt class="col-sm-2">
            Giá loại phòng
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:N0}", Model.Gialoaiphong)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Malp" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại</a>
    </form>
</div>
