@model Hotel1.Models.Khachhang

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa</h1>

<h3>Chắc xóa khách này chưa?</h3>
<div>
    <h4>Khách hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Chứng Minh Nhân Dân
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cmnd)
        </dd>
        <dt class = "col-sm-2">
            Tên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ten)
        </dd>
        <dt class = "col-sm-2">
            Ngày sinh
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ngaysinh)
        </dd>
        <dt class = "col-sm-2">
            Địa chỉ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Diachi)
        </dd>
        <dt class = "col-sm-2">
            Giới tính
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Phai)
            {
                <text>Nam</text>
            }
            else
            {
                <text>Nữ</text>
            }
        </dd>
        <dt class = "col-sm-2">
            Số điện thoại
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sdt)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Loại khách
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Malk)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Cmnd" />
        <input type="submit" value="Sút" class="btn btn-danger" /> |
        <a asp-action="Index">Quay xe</a>
    </form>
</div>
